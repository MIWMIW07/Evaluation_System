{
    "name": "evaluation-system/google-integration",
    "description": "Teacher Evaluation System with Google Sheets and Drive Integration",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "ext-gd": "*",
        "ext-zip": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*",
        "google/apiclient": "^2.15",
        "tecnickcom/tcpdf": "^6.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "echo 'Dependencies installed successfully!'",
            "echo 'TCPDF and Google API Client are ready to use.'"
        ]
    }
}
