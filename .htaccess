# .htaccess for PHP Teacher Evaluation System on Railway
# Fixed version without Directory directives

RewriteEngine On

ServerName localhost

# Prevent infinite loops by checking if we're already processing a redirect
RewriteCond %{ENV:REDIRECT_STATUS} 200
RewriteRule ^.*$ - [L]

# Security: Block access to sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "\.(sql|log|conf|ini|bak|backup)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to includes directory from direct web access
RewriteRule ^includes/ - [F,L]

# Allow access to reports directory - using RewriteRule instead of Directory
RewriteCond %{REQUEST_URI} ^/reports/
RewriteRule ^reports/(.*)$ reports/$1 [L]

# Error pages
ErrorDocument 404 /error.php?code=404
ErrorDocument 500 /error.php?code=500

# PHP settings for Railway
php_value upload_max_filesize 10M
php_value post_max_size 10M
php_value max_execution_time 300
php_value memory_limit 256M

# Cache static files
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType text/csv "access plus 1 hour"
</IfModule>

# Gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/csv
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# MIME types for better file handling
<IfModule mod_mime.c>
    AddType text/html .html
    AddType text/csv .csv
    AddType application/json .json
</IfModule>

# Custom 403 page for reports access denied
ErrorDocument 403 "Access to this file is restricted."

